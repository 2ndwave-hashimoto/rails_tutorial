<h1 align="center">新規会員登録</h1>
<p align="center"><%= flash[:success] %></p>
<p align="center"><%= flash[:danger] %></p>
	<%= form_for(@user) do |f| %>
	<%= render 'layouts/error_messages', model:f.object %>
	<div align="center">
		<p>
			<%= f.label :name, "氏名" %>
			<%= f.text_field :name %>
		</p>
		<p>
			<%= f.label :email, "メールアドレス" %>
			<%= f.text_field :email %>
		</p>
		<p>
			<%= f.label :password_digest, "パスワード" %>
			<%= f.password_field :password %>
		</p>
		<p>
			<%= f.label :password_confirmation, "パスワード確認" %>
			<%= f.password_field :password_confirmation %>
		</p>
	</div>
	<p align="center">
		<%= f.submit "登録" %>
	</p>
	<% end -%>

<div align="center">
	<%= link_to "記事一覧へ戻る", blogs_path %>
</div>
